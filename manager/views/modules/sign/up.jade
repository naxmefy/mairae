extends layout

block sign
  .container
    .row
      .page-header
        h1 Please sign up
  form.form-signin(role='form', method='post', action='/signup')
      input.form-control(type='text', name='name', placeholder='Name', required='required', autofocus='autofocus')
      input.form-control(type='email', name='email', placeholder='Email address', required='required')
      input.form-control(type='password', name='password', placeholder='Password', required='required')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
