extends ../layout

block append style
  link(rel='stylesheet', href='/vendor/gridforms/gridforms.css')

block append script
  script(src='/vendor/gridforms/gridforms.js')

block page-header
  h1 New User

block content
  .container
    .row
      .col-md-12
        form.grid-form(action='/admin/users', method='post', role='form', autocorrect="off" autocapitalize="off" autocomplete="off")
          input#prevent_autofill(type='text', name='prevent_autofill', value='', style='display: none;')
          input(type='password', name='password_fake', value='', style='display: none;')
          input(type='password')

          fieldset
            legend User Data
            div(data-row-span='2')
              div(data-field-span='1')
                label Name
                input(type='text', name='name', value='', required='required', autofocus='autofocus')
              div(data-field-span='1')
                label Email
                input(type='text', name='email', value='', required='required')
            div(data-row-span='2')
              div(data-field-span='1')
                label Admin
                input(type='checkbox', name='admin')
          br
          fieldset
            legend Set new password
            div(data-row-span='2')
              div(data-field-span='1')
                label New password
                input(type='password', name='password', placeholder='Enter password...', value='', autocomplete="off", required='required')
              div(data-field-span='1')
                label Repeat new password
                input(type='password', name='passwordrepeat', placeholder='Repeat password...', value='', autocomplete="off", required='required')
          br
          fieldset
            div(data-row-span='2')
              div(data-field-span='2')
                .pull-left
                  a.btn.btn-default(href='/admin/users') Cancel
                .pull-right
                  input.btn.btn-primary(type='submit', value='Save')