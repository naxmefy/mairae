.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') 
        img(src='/img/logox48.png', style='height: 20px;', alt='')
        !=" MAIRAE"
    .navbar-collapse.collapse
      ul.nav.navbar-nav
        - if (locals.user)
          li
            a(href='/') Dashboard
          li
            a(href='/server') Server
          li
            a(href='/docs') Docs
          li
            a(href='/about') About

      ul.nav.navbar-nav.navbar-right
        - if (!locals.user)
          li
            a(href="/signin") Sign in
          li
            a(href="/signup") Sign up
        - else
          - if (user.admin)
            li
              a(href="/admin") Admin Control
          li.dropdown
            a.dropdown-toggle(href="#", data-toggle="dropdown")=user.name || user.username
              - if (user.admin)
                !=" (A) "
              - else
                !=" (M) "
              span.caret=" "
            ul.dropdown-menu(role="menu")
              li
                a(href="/account") Account Settings
              li
                a(href="/signout") Sign out
